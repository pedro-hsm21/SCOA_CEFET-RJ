		tfCidade.setText("");
		tfCPF.setText("");
		tfRUA.setText("");
		tftelefone.setText("");
		tfUF.setText("");
		DefaultTableModel model = (DefaultTableModel) table.getModel();
		model.setRowCount(0);;
		
	}
